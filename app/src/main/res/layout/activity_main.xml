<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título de la calculadora -->
    <TextView
        android:id="@+id/tituloCalculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora Básica"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:textStyle="bold" />

    <!-- Pantalla para mostrar resultados -->
    <TextView
        android:id="@+id/textViewPantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:text="0"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/botonDividir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/botonMultiplicar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Fila 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/botonRestar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Fila 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonLimpiar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/boton0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/botonIgual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/botonSumar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
